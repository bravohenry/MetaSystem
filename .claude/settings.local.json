{
  "permissions": {
    "allow": [
      "Read",
      "Write", 
      "Edit",
      "MultiEdit",
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(cp:*)",
      "Bash(tree:*)"
    ],
    "ask": [
      "Bash"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo '🔧 Bravo MetaSystem 正在处理文件操作...' >&2"
          }
        ]
      },
      {
        "matcher": "Bash\\(mkdir:",
        "hooks": [
          {
            "type": "command", 
            "command": "echo '📁 正在创建AI团队系统目录...' >&2"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo '✅ 文件操作完成！' >&2"
          }
        ]
      },
      {
        "matcher": "Bash\\(mkdir:",
        "hooks": [
          {
            "type": "command",
            "command": "echo '🎉 AI团队系统目录创建成功！' >&2"
          }
        ]
      }
    ]
  },
  "system": {
    "name": "Bravo MetaSystem",
    "version": "2.0.0",
    "description": "智能AI团队构建系统 - 专业协作，无限可能",
    "features": [
      "引导式AI团队创建",
      "动态Agent生成",
      "状态驱动协作", 
      "模板化质量保证",
      "Claude Code深度集成"
    ]
  }
}